  },
  "workspaces": [
    "apps/**/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "docker:build": "docker build . -t blockchain-lab-um/eductx-platform-base && pnpm -r docker:build",
    "docker:run": "pnpm docker:build && docker compose --env-file apps/dashboard/.env --env-file apps/issuer/.env up",
    "lint": "pnpm prettier --ignore-path .ci.prettierignore && pnpm -r lint",
    "lint:fix": "pnpm prettier --ignore-path .ci.prettierignore && pnpm -r lint:fix",
    "prepare": "is-ci || husky install",
    "prettier": "prettier --write ."
  },
  "devDependencies": {
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "@ianvs/prettier-plugin-sort-imports": "^4.1.1",
    "@types/eslint": "^8.44.6",
    "@types/node": "^20.8.9",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.52.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "fastify-cli": "^5.8.0",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
