    "prettier-plugin-tailwindcss": "^0.5.6",
    "rimraf": "^5.0.5",
    "typescript": "^5.2.2"
  },
  "packageManager": "pnpm@8.7.6",
  "engines": {
    "node": ">=18.17.1"
  }
}
