{
  "name": "issuer",
  "version": "1.0.0",
  "description": "This project was bootstrapped with Fastify-CLI.",
  "keywords": [],
  "license": "ISC",
  "author": "",
  "type": "module",
  "main": "app.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "node build.js",
    "dev": "pnpm build && concurrently -k -p \"[{name}]\" -n \"Typescript,App\" -c \"yellow.bold,cyan.bold\" \"pnpm watch:tsc\" \"pnpm dev:start\"",
    "dev:start": "fastify start --ignore-watch=.ts$ -w -l info -P dist/app.js",
    "lint": "pnpm lint:eslint && pnpm lint:tsc && pnpm lint:prettier",
    "lint:eslint": "eslint . --ext .js,.ts --fix",
    "lint:prettier": "prettier . --write",
    "lint:tsc": "tsc --noEmit --incremental false",
    "start": "pnpm build && fastify start -l info dist/app.js",
    "test": "pnpm build && tsc -p test/tsconfig.json && c8 tap --ts \"test/**/*.test.ts\"",
    "watch:esbuild": "esbuild --watch --platform=node --target=es2022 --outdir=dist src/*.ts src/**/*.ts src/**/**/*.ts",
    "watch:tsc": "tsc -w -p tsconfig.json"
  },
  "tap": {
    "coverage": false,
    "node-arg": [
      "--no-warnings",
      "--experimental-loader",
      "ts-node/esm"
    ]
  },
  "dependencies": {
    "@blockchain-lab-um/did-provider-key": "^1.0.7",
    "@blockchain-lab-um/veramo-datamanager": "^1.0.0",
    "@fastify/autoload": "^5.0.0",
    "@fastify/cors": "^8.4.0",
    "@fastify/postgres": "^5.2.0",
    "@fastify/sensible": "^5.0.0",
    "@veramo/core": "^5.5.0",
    "@veramo/credential-w3c": "^5.5.0",
    "@veramo/did-manager": "^5.5.0",
    "@veramo/did-resolver": "^5.5.0",
    "@veramo/key-manager": "^5.5.0",
    "@veramo/kms-local": "^5.5.0",
    "did-resolver": "^4.1.0",
    "env-schema": "^5.2.0",
    "fastify": "^4.0.0",
    "fastify-cli": "^5.8.0",
    "fastify-plugin": "^4.0.0",
    "fastify-schema-constraint": "^3.0.0",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/node": "^20.4.4",
    "@types/pg": "^8.10.3",
    "@types/tap": "^15.0.5",
    "c8": "^7.13.0",
    "concurrently": "^7.0.0",
    "esbuild": "^0.19.3",
    "fastify-tsconfig": "^1.0.1",
    "tap": "^16.1.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  }
}
