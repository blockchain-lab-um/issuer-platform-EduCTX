    "@fastify/autoload": "^5.10.0",
    "@fastify/cors": "^9.0.1",
    "@fastify/postgres": "^5.2.2",
    "@fastify/sensible": "^5.6.0",
    "@veramo/core": "^6.0.0",
    "@veramo/credential-w3c": "^6.0.0",
    "@veramo/did-manager": "^6.0.0",
    "@veramo/did-resolver": "^6.0.0",
    "@veramo/key-manager": "^6.0.0",
    "@veramo/kms-local": "^6.0.0",
    "@veramo/utils": "^6.0.0",
    "close-with-grace": "^1.3.0",
    "did-resolver": "^4.1.0",
    "dotenv": "^16.4.5",
    "elliptic": "^6.5.5",
    "env-schema": "^6.0.0",
    "fastify": "^4.28.1",
    "fastify-cli": "^6.2.1",
    "fastify-plugin": "^4.0.0",
    "fastify-print-routes": "^3.2.0",
    "fastify-schema-constraint": "^3.0.0",
    "jose": "^5.6.2",
    "pg": "^8.12.0"
  },
  "devDependencies": {
    "@types/elliptic": "^6.4.18",
    "@types/node": "^20.14.9",
    "@types/pg": "^8.11.6",
    "concurrently": "^8.2.2",
    "esbuild": "^0.23.0",
    "fastify-tsconfig": "^2.0.0",
