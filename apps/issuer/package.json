{
  "name": "issuer",
  "version": "1.0.0",
  "description": "This project was bootstrapped with Fastify-CLI.",
  "keywords": [],
  "license": "ISC",
  "author": "",
  "type": "module",
  "main": "dist/server.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "node build.js",
    "dev": "pnpm build && concurrently -k -p \"[{name}]\" -n \"Typescript,App\" -c \"yellow.bold,cyan.bold\" \"pnpm watch:tsc\" \"pnpm dev:start\"",
    "dev:start": "node --watch dist/server.js",
    "docker:build": "docker build . -t blockchain-lab-um/eductx-platform-issuer",
    "lint": "eslint . --ext .js,.ts && prettier . --check && tsc -p tsconfig.json --noEmit --incremental false",
    "lint:fix": "eslint . --ext .js,.ts --fix && prettier . --write && tsc -p tsconfig.json --noEmit --incremental false",
    "start": "node dist/server.js",
    "test": "pnpm build && tsc -p test/tsconfig.json && c8 tap --ts \"test/**/*.test.ts\"",
    "watch:esbuild": "esbuild --watch --platform=node --target=es2022 --outdir=dist src/*.ts src/**/*.ts src/**/**/*.ts",
    "watch:tsc": "tsc -w -p tsconfig.json"
  },
  "tap": {
    "coverage": false,
    "node-arg": [
      "--no-warnings",
      "--experimental-loader",
      "ts-node/esm"
    ]
  },
  "dependencies": {
    "@blockchain-lab-um/did-provider-ebsi": "^1.2.1-beta.0",
    "@blockchain-lab-um/did-provider-key": "^1.0.7",
    "@blockchain-lab-um/veramo-datamanager": "^1.0.0",
    "@fastify/autoload": "^5.0.0",
    "@fastify/cors": "^8.4.0",
    "@fastify/postgres": "^5.2.0",
    "@fastify/sensible": "^5.0.0",
    "@veramo/core": "^5.5.0",
    "@veramo/credential-w3c": "^5.5.0",
    "@veramo/did-manager": "^5.5.0",
    "@veramo/did-resolver": "^5.5.0",
    "@veramo/key-manager": "^5.5.0",
    "@veramo/kms-local": "^5.5.0",
    "@veramo/utils": "^5.5.3",
    "close-with-grace": "^1.2.0",
    "did-resolver": "^4.1.0",
    "dotenv": "^16.3.1",
    "elliptic": "^6.5.4",
    "env-schema": "^5.2.0",
    "fastify": "^4.0.0",
    "fastify-cli": "^5.8.0",
    "fastify-plugin": "^4.0.0",
    "fastify-print-routes": "^2.1.0",
    "fastify-schema-constraint": "^3.0.0",
    "jose": "^4.15.3",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/elliptic": "^6.4.15",
    "@types/node": "^20.4.4",
    "@types/pg": "^8.10.3",
    "@types/tap": "^15.0.5",
    "c8": "^7.13.0",
    "concurrently": "^7.0.0",
    "esbuild": "^0.19.3",
    "fastify-tsconfig": "^1.0.1",
    "pino-pretty": "^10.2.3",
    "tap": "^16.1.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  }
}
